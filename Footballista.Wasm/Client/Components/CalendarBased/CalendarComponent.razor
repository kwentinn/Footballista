@using System.Globalization;
@using Itenso.TimePeriod;
@using Footballista.Wasm.Client.Components.CalendarBased.Yearly;
@using Footballista.Wasm.Client.Components.CalendarBased.Monthly;
@using Footballista.Wasm.Client.Components.CalendarBased.Weekly;
@using Footballista.Wasm.Shared.Data.Calendars; 

@switch (CalendarViewType)
{
	case CalendarViewType.YearlyView:
		<YearlyCalendarComponent DisplayDate="DisplayDate" />
		break;

	case CalendarViewType.MonthlyView:
		<MonthlyCalendarComponent DisplayDate="DisplayDate" Events="Events" />
		break;

	case CalendarViewType.WeeklyView:
		<WeeklyCalendarComponent DisplayDate="DisplayDate" />
		break;

	default:
		<Alert>Unknown calendar view</Alert>
		break;
}


@code {

	[Parameter]
	public Date DisplayDate { get; set; }

	[Parameter]
	public CalendarViewType CalendarViewType { get; set; }

	[Parameter]
	public List<Event> Events { get; set; }

	protected override void OnInitialized()
	{
	}

}
